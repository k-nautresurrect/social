<%- include("./partials/header") %>
<div class="ui container">
    <div class="ui segment">
        <span><%= user.username %></span>
        <img src="/image/<%= user.image %>" class="ui fluid image">
     </div> 
    <div class="ui middle aligned divided list">
        <div class="item">
            <div class="content">
                <div class="header">
                   Name :    <%= user.name %>    
                </div>
                
            </div>
        </div>
        <div class="item">
            <div class="content">
                <div class="header">
                    About Yourself: <%= user.bio %>
                </div>
            </div>
        </div>
        <div class="item">
            <div class="content">
                <div class="header">
                    Website: <a href="<%= user.website %> ">Open this user website</a>      
                </div>
            </div>
        </div>
    </div>
    <div class="ui equal width grid">
        <% if(status == 1){ %>
            <div class="column">
                <form action="/user/<%=user.id%>/accept" method="post">
                    <button id="friend" class="ui basic fluid blue button">Accept</button>
                </form>
            </div>
            <div class="column">
                <form action="/user/<%=user.id%>/decline" method="post">
                    <button id="friend" class="ui basic fluid red button">Decline</button>
                </form>
            </div>
        <% } else if (status == 2){%>
            <div class="column">
                <form action="/user/<%=user.id%>/cancle" method="post">
                    <button id="friend" class="ui basic fluid red button">Cancle Request</button>
                </form>
            </div>
        <% } else if (status == 3){%>
            <div class="column">
                <form action="/user/<%=user.id%>/removefriend" method="post">
                    <button id="friend" class="ui basic fluid red button">Remove friend</button>
                </form>
            </div>
            
        <% }else{%>
            <div class="column">
                <form action="/user/<%=user._id%>" method="post">
                    <button id="friend" class="ui basic fluid blue button">Add friend</button>
                </form>
            </div>
        <% } %>
        <div class="column">
            <form action="/message/<%=user._id%>" method="GET">
                <button id="friend" class="ui basic fluid green button">Message</button>
            </form>
        </div>
    </div>
    <hr>
    <h3>Posts</h3>
    <br>
    <div class="ui three stackable cards">
        <% if(post.length == 0){%>
            <div class="card">
                <div class="content" style="text-align: center;">
                    No Posts Uploaded Yet
                </div>
            </div>
        <%}else{%>
            <% post.forEach(function(post){ %>
                <div class="card" >
                  <div class="image">
                    <img src="/image/<%=post.image%>" id="imageshow">
                  </div>
                  <div class="content" style="text-transform: capitalize;">
                    <a class="header" href="/post/<%= post._id%>"><%= post.title%></a>
                    <br>
                    <div class="meta">
                      <i class="comment outline icon"></i>
                      <%= post.comments.length%>
                      <span class="right floated">
                        Post by (<a href="/user/<%=post.user.id%>" style="color: rgba(0,0,0,.4);"><%=post.user.username%></a>)
                      </span>
                    </div>
                  </div>
                </div>
              <% });%>
        <%}%> 
      </div>
</div>
<%- include("./partials/footer") %>
